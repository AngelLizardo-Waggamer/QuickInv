<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="aahl.quickinv.ui.home.HomeFragment"
    android:background="@color/background_screen"
    >

    <ImageView
        android:id="@+id/ivFondoHome"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:alpha="0.5"/>

    <ImageView
        android:id="@+id/ivLogoHome"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        android:background="@drawable/packaging"/>

    <TextView
        android:id="@+id/tvTituloHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ivLogoHome"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        android:text="QuickInv"
        android:textSize="50dp"
        android:textStyle="bold"
        android:textColor="@color/brand_primary"
        android:gravity="center"/>

    <TextView
        android:id="@+id/tvSubtituloHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvTituloHome"
        app:layout_constraintEnd_toEndOf="@id/tvTituloHome"
        android:layout_marginTop="-14dp"
        android:text="v0.1.0"
        android:textSize="8dp"
        />

    <TextView
        android:id="@+id/tvDescripcionApp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvSubtituloHome"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="20dp"
        android:gravity="center"
        android:textColor="@color/text_secondary"
        android:text="Your best ally for managing your inventory"
        />



    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@id/tvDescripcionApp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:gravity="center"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:background="@drawable/home_btn_bg"
                android:backgroundTint="@color/brand_primary"
                android:id="@+id/btnNavegarManage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Manage"
                />

            <Button
                android:background="@drawable/home_btn_bg"
                android:id="@+id/btnNavegarVisualizer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@color/brand_primary"
                android:text="Visualize"/>

        </LinearLayout>



    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>