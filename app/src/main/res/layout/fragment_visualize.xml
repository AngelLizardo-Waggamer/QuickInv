<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_screen">

    <EditText
        android:id="@+id/etSearch"
        android:enabled="true"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@drawable/barra_busqueda_recycler_bg"
        android:drawableEnd="@android:drawable/ic_menu_search"
        android:drawableTint="@color/text_secondary"
        android:drawablePadding="12dp"
        android:hint="Search product..."
        android:paddingHorizontal="16dp"
        android:elevation="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvLabelInventory"
        android:layout_marginStart="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Viewing Inventory:"
        android:textColor="@color/text_secondary"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etSearch" />

    <Spinner
        android:id="@+id/spinnerInventories"
        android:layout_marginHorizontal="20dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvLabelInventory" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvProducts"
        android:enabled="true"
        android:background="@drawable/barra_busqueda_recycler_bg"
        android:elevation="2dp"
        android:padding="5dp"
        android:layout_marginHorizontal="20dp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spinnerInventories" />

</androidx.constraintlayout.widget.ConstraintLayout>